<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Gradasi warna salmon pink ke maroon -->
    <gradient
        android:startColor="#FF8A80"
        android:endColor="#800000"
        android:angle="90"/>

    <!-- Sudut melengkung -->
    <corners android:radius="16dp" />

    <!-- Garis tepi lembut -->
    <stroke
        android:width="1dp"
        android:color="#FFC1B6" />

    <!-- Padding -->
    <padding
        android:left="16dp"
        android:top="12dp"
        android:right="16dp"
        android:bottom="12dp" />
</shape>
